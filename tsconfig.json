{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "removeComments": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src/*", "src/types/*.d.ts", "src/**/*"],
    "exclude": ["node_modules", "src/savedSounds"]
}
